
@model Setting

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row my-5">
        <div class="col-lg-12 my-5">
            <form asp-area="Admin" asp-controller="Setting" asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All"></div>

                <div class="mb-3">
                    <label asp-for="@Model.Phone" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Phone</label>
                    <input class="form-control" asp-for="@Model.Phone" rows="7">
                    <span class="text-danger" asp-validation-for="@Model.Phone"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Email</label>
                    <input class="form-control" asp-for="@Model.Email">
                    <span class="text-danger" asp-validation-for="@Model.Email"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Address" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Address</label>
                    <input class="form-control" asp-for="@Model.Address">
                    <span class="text-danger" asp-validation-for="@Model.Address"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Copyright" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Copyright</label>
                    <input class="form-control" asp-for="@Model.Copyright">
                    <span class="text-danger" asp-validation-for="@Model.Copyright"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CopyrightLink" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Copyright Link</label>
                    <input class="form-control" asp-for="@Model.CopyrightLink">
                    <span class="text-danger" asp-validation-for="@Model.CopyrightLink"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Info" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Info</label>
                    <textarea class="form-control" asp-for="@Model.Info" rows="7"></textarea>
                    <span class="text-danger" asp-validation-for="@Model.Info"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.LogoFile" class="form-label">Choose Logo</label>
                    <input class="form-control" asp-for="@Model.LogoFile">
                    <span class="text-danger" asp-validation-for="@Model.LogoFile"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.FooterLogoFile" class="form-label">Choose Footer Logo</label>
                    <input class="form-control" asp-for="@Model.FooterLogoFile">
                    <span class="text-danger" asp-validation-for="@Model.FooterLogoFile"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.FooterBgFile" class="form-label">Choose Footer Background Image</label>
                    <input class="form-control" asp-for="@Model.FooterBgFile">
                    <span class="text-danger" asp-validation-for="@Model.FooterBgFile"></span>
                </div>
                <input type="hidden" asp-for="@Model.Id">
                <input type="hidden" asp-for="@Model.Logo">
                <input type="hidden" asp-for="@Model.FooterLogo">
                <input type="hidden" asp-for="@Model.FooterBg">

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
