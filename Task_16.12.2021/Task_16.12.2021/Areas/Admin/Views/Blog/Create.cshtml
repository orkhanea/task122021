
@model Blog

@{
    ViewData["Title"] = "Blog Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form class="my-5 p-5" asp-area="Admin" asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label">Blog Tite</label>
        <input class="form-control" asp-for="@Model.Title">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Text" class="form-label">Blog Content</label>
        <textarea class="form-control" asp-for="@Model.Text"></textarea>
    </div>

    <select class="form-select" asp-for="@Model.BlogCategoryId" aria-label="Default select example">
        <option selected>Select Category</option>
        @{
            foreach (var c in ViewBag.BlogCategory)
            {
                <option value="@c.Id">@c.CategoryName</option>
            }
        }

    </select>

    <div class="mb-3">
        <label asp-for="@Model.ImageFile" class="form-label">Default file input example</label>
        <input class="form-control" asp-for="@Model.ImageFile">
    </div>





    <button type="submit" class="btn btn-primary">Add</button>
</form>
