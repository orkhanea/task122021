@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center" style="font-size: 35px !important; font-weight: 600 !important; color: #3b579d !important; ">Services</h4>
                <a class="btn btn-primary mb-3 px-5" asp-area="Admin" asp-controller="Service" asp-action="Create">Add New</a>
                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th class="tableTrCustom">
                                    #
                                </th>
                                <th class="tableTrCustom">
                                    Image
                                </th>
                                <th class="tableTrCustom">
                                    Title
                                </th>
                                <th class="tableTrCustom">
                                    Text
                                </th>
                                <th class="tableTrCustom">
                                    Icon
                                </th>
                                <th class="tableTrCustom">
                                    Created Date
                                </th>
                                <th class="tableTrCustom">
                                    Edit
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 0;
                                foreach (var item in Model)
                                {
                                    counter++;
                                    <tr>
                                        <td style="font-size: 18px !important; font-weight: 500 !important;">
                                            @counter
                                        </td>
                                        <td>
                                            <img style="border-radius: unset !important; width: 100px !important; height: 100px !important;"  src="~/images/resource/@item.Image" alt="Alternate Text" />
                                        </td>
                                        <td style="font-size: 18px !important; font-weight: 500 !important;">
                                            @item.Title
                                        </td>
                                        <td style="font-size: 18px !important; font-weight: 500 !important;">
                                            @(@item.Text.Length>50?@item.Text.Substring(0, 50)+"...":@item.Text)
                                        </td>
                                        <td style="font-size: 18px !important; font-weight: 500 !important;">
                                            @item.Icon
                                        </td>
                                        <td style="font-size: 18px !important; font-weight: 500 !important;">
                                            @item.CreatedDate.ToString("dd MMMM yyyy")
                                        </td>
                                        <td>
                                            <a class="mb-2 w-100 btn-sm btn btn-success" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Service" asp-action="Update">Update</a>
                                            <br>
                                            <a class="w-100 btn-sm btn btn-danger" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Service" asp-action="Delete" onclick="return confirm('Are you sure?')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

