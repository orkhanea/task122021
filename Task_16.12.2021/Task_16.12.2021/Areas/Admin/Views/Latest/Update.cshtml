
@model LatestArticle

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form class="my-5 p-5" asp-area="Admin" asp-controller="Latest" asp-action="Update" method="post">
    <div class="mb-3">
        <label asp-for="@Model.Content" class="form-label">Article Content</label>
        <textarea class="form-control" asp-for="@Model.Content"></textarea>
        <span class="text-danger" asp-validation-for="@Model.Content"></span>
    </div>

    <input type="hidden" asp-for="@Model.Id"/>
    <input type="hidden" asp-for="@Model.CreatedDate"/>
    <button type="submit" class="btn btn-primary">Add</button>
</form>

