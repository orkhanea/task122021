@model OurWork

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form class="my-5 p-5" asp-area="Admin" asp-controller="Our_Work" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="@Model.SubTitle" class="form-label">Sub-Title</label>
        <input class="form-control" asp-for="@Model.SubTitle">
        <span class="text-danger" asp-validation-for="@Model.SubTitle"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label">Title</label>
        <input class="form-control" asp-for="@Model.Title">
        <span class="text-danger" asp-validation-for="@Model.Title"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Text" class="form-label">Content</label>
        <textarea class="form-control" asp-for="@Model.Text"></textarea>
        <span class="text-danger" asp-validation-for="@Model.Text"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.TagToWorksId" class="form-label">Tags</label>
        <select class="form-control js-example-basic-multiple" multiple="multiple" asp-for="@Model.TagToWorksId">
            @{
                foreach (var item in ViewBag.tags)
                {
                    <option value="@item.Id">@item.TagName</option>
                }
            }
        </select>
        <span class="text-danger" asp-validation-for="@Model.TagToWorksId"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ImageFile" class="form-label">Image</label>
        <input class="form-control" asp-for="@Model.ImageFile">
        <span class="text-danger" asp-validation-for="@Model.ImageFile"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>

