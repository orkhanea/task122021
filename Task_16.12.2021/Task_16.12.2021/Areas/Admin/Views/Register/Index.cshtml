@model VmRegister
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Spica Admin</title>
    <!-- base:css -->
    <link rel="stylesheet" href="~/Areas/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet"href="~/Areas/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet"href="~/Areas/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon"href="~/Areas/images/favicon.png" />
</head>

<body>
    <div class="container-scroller d-flex">
        <div class="container-fluid page-body-wrapper full-page-wrapper d-flex">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/Areas/images/logo.svg" alt="logo">
                            </div>
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                            <div class="text-danger" asp-validation-summary="All"></div>
                            <form class="pt-3" asp-area="Admin" asp-controller="Register" asp-action="Index" method="post">
                                <div class="form-group">
                                    <input  class="form-control form-control-lg" asp-for="@Model.Name" placeholder="Name">
                                </div>
                                <div class="form-group">
                                    <input  class="form-control form-control-lg" asp-for="@Model.Surname"  placeholder="Surname">
                                </div>
                                <div class="form-group">
                                    <input  class="form-control form-control-lg" asp-for="@Model.UserName"  placeholder="User Name">
                                </div>
                                <div class="form-group">
                                    <input  class="form-control form-control-lg" asp-for="@Model.Email"  placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input  type="password" class="form-control form-control-lg" asp-for="@Model.Password"  placeholder="Password">
                                </div>
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            I agree to all Terms & Conditions
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"> SIGN UP </button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="login.html" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- base:js -->
    <script src="~/Areas/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/Areas/js/off-canvas.js"></script>
    <script src="~/Areas/js/hoverable-collapse.js"></script>
    <script src="~/Areas/js/template.js"></script>
    <!-- endinject -->
</body>

</html>
