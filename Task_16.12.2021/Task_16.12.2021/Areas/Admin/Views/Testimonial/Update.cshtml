@model Testimonial

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form class="my-5 p-5" asp-area="Admin" asp-controller="Testimonial" asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="@Model.FullName" class="form-label">Full Name</label>
        <input class="form-control" asp-for="@Model.FullName">
        <span class="text-danger" asp-validation-for="@Model.FullName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Text" class="form-label">Content</label>
        <textarea class="form-control" asp-for="@Model.Text"></textarea>
        <span class="text-danger" asp-validation-for="@Model.Text"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ImageFile" class="form-label">Image</label>
        <input class="form-control" asp-for="@Model.ImageFile">
        <span class="text-danger" asp-validation-for="@Model.ImageFile"></span>
    </div>

    <input type="hidden" asp-for="@Model.Id"  />
    <input type="hidden" asp-for="@Model.Image"  />
    <button type="submit" class="btn btn-primary">Add</button>
</form>



